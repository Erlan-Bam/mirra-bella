---
import '../app/global.css';

interface Props {
	title?: string;
	lang?: string;
}

const { title = 'Mirra Bella - Esthetician Studio', lang = 'en' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-bv-celine">
		<!-- <Loading client:load /> -->
		<slot />
	</body>
</html>
